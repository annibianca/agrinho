    <script>
        // Seleciona o cabeçalho
        const header = document.querySelector('header');

        // Adiciona um evento de mouseover ao cabeçalho
        header.addEventListener('mouseover', function() {
            // Gera uma cor aleatória em formato hexadecimal
            const randomColor = '#' + Math.floor(Math.random()*16777215).toString(16);
            
            // Define a cor de fundo do cabeçalho como a cor aleatória
            header.style.backgroundColor = randomColor;
        });

        // Adiciona um evento de mouseout ao cabeçalho
        header.addEventListener('mouseout', function() {
            // Retorna a cor de fundo do cabeçalho para verde
            header.style.backgroundColor = '#4CAF50';
        });
    </script>

